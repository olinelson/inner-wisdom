<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'ui form' } ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  

  <div class="actions">
    <input class="ui button" type="submit" value="Resend unlock instructions" />
  </div>
<% end %>

<%= render "devise/shared/links" %>
